<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta property="og:site_name" content="Excalibur.js">
    <meta property="og:title" content="{{ title if title else 'Excalibur.js | Blog' }}">
    <meta property="og:description" content="{{ description if description else ''}}">
    <!-- 1200 x 630 -->
    <meta property="og:image" content="{{ heroImage if heroImage else 'https://blog.excaliburjs.com/img/excaliburjs-index.png'}}">
    <meta property="og:url" content="https://https://blog.excaliburjs.com/{{ page.url }}">
    <meta property="og:type" content="website">

    <meta name="description" content="{{ description or metadata.description }}">

    <meta property="twitter:title" content="{{ title if title else 'Excalibur.js | Blog' }}">
    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="https://https://blog.excaliburjs.com/{{ page.url }}">
    <meta property="twitter:image" content="{{ heroImage if heroImage else 'https://blog.excaliburjs.com/img/excaliburjs-index.png'}}">
    <meta property="twitter:description" content="{{ description if description else ''}}">
    <meta property="twitter:site" content="@excaliburjs">
    <meta property="twitter:creator" content="@excaliburjs">

    {% if canonical %}
      <link rel="canonical" href="{{ canonical }}" />
    {% endif %}
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <h1 class="home"><a href="https://excaliburjs.com/"><img src="/img/excaliburjs-index.png" alt="Excalibur.js home" title="Excalibur.js home"></a></h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
